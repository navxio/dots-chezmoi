alias ....='cd ../../../'
alias ping='ping -c 5'
alias ta='tmux attach'
alias cat='bat'
alias nrc='nvim ~/.config/nvim/init.vim'
alias tr='tree -C -L 1'
alias tree='tree -C -L 2' # by default it stops at 2 levels deep
alias treee='tree -C -L 3'
alias vg='vagrant global-status'
alias opn='open-cli'
alias ls='ls -G'
alias uchrome="/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome --user-data-dir=\"/tmp/chrome_temp_session\" --disable-web-security --disable-site-isolation-trials 'http://localhost:8086/wbl/dev/54d8b79209c7e2c3158b4569' &> /dev/null &"
