alias c='clear'
alias t='tmux'
alias cap='cat package.json'
alias dc='docker-compose'
alias gcd='cd $(git rev-parse --show-toplevel)'
alias ctab='copyq tab'
alias pir='ssh pi "sudo reboot"'
alias me='ME_CONFIG_MONGODB_URL=\"mongodb://localhost:27017/widgetic?ssl=false\" mongo-express'
